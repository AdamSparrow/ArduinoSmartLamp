<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.javier.arduinosmartlamp.PairedBTDevices">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_paired_devices"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnConnectBT"
            android:background="?attr/colorAccent"
            android:visibility="visible"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include
        layout="@layout/content_paired_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btnConnectBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="@string/btnConnectBT"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="10dp" />

    <Button
        android:id="@+id/btnBTSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConnectBT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/btnBTSearch"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="86dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="368dp"
        android:layout_height="286dp"
        android:layout_below="@+id/btnBTSearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="117dp" />

</RelativeLayout>

